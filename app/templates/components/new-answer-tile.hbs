<form>
  <h3>Submit an answer</h3>
  <div class="form-group">
    <label for="author">Author</label><br>
    {{input value=author class="author form-control"}}
  </div>

  <div class="form-group">
    <label for="answer">Answer</label><br>
    {{textarea class="form-control" rows="4" value=answer id="answer"}}
  </div>
  <button {{action 'saveAnswer'}}>Save</button>
</form>
