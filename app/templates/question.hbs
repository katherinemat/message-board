<h2>{{model.title}}</h2>
<h4>-{{model.author}}</h4>
<p>{{model.text}}</p>
<button {{action 'deleteQuestion' model}}>Delete</button>
{{edit-question-tile model=model editQuestion='editQuestion'}}

{{#each model.answers as |answer|}}
  {{question-answer-tile answer=answer}}
{{/each}}

{{new-answer-tile saveAnswer='saveAnswer' model=model}}
